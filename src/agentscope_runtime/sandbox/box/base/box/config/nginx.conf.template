worker_processes 1;

events { worker_connections 1024; }

http {
    server {
        listen 80;

        location /fastapi {
            rewrite ^/fastapi(.*)$ $1 break;

            proxy_connect_timeout ${NGINX_TIMEOUT}s;
            proxy_send_timeout    ${NGINX_TIMEOUT}s;
            proxy_read_timeout    ${NGINX_TIMEOUT}s;

            proxy_pass http://localhost:8000;
        }
    }
}